{
  "manifest_version": 3,
  "name": "Minasona Twitch Icons",
  "description": "See cute Minawan not only in the stream but in the chat as well! Displays Minasonas as a badge right next to a username in the chat.",
  "version": "1.4",
  "permissions": ["storage", "alarms"],
  "action": { "default_popup": "popup.html", "default_title": "Minasona Twitch Icons Settings" },
  "host_permissions": ["https://*.twitch.tv/*", "https://minawan.me/", "https://storage.googleapis.com/minawan-pics.firebasestorage.app/*"],
  "content_scripts": [
    {
      "matches": ["https://*.twitch.tv/*"],
      "js": ["content.js", "ffzContent.js"],
      "css": ["style.css"]
    },
    {
      "matches": ["https://*.twitch.tv/*"],
      "js": ["ffzIntegration.js"],
      "world": "MAIN"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "icons": {
    "48": "assets/Minawan_Purple_48x48.png",
    "128": "assets/Minawan_Purple_128x128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "minasona-twitch-icons@1.2",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
